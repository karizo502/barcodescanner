<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="match_parent"
    android:paddingLeft="10dp" android:paddingRight="10dp"
    android:background="#fff" android:layout_width="match_parent"
    android:paddingTop="10dp">

    <TextView android:textColor="#000" android:textSize="20dp"
        android:layout_height="wrap_content" android:id="@+id/lab_ipaddress"
        android:text="IP Address" android:layout_width="match_parent" />
    <EditText android:layout_height="wrap_content"
        android:id="@+id/txt_ipaddress"
        android:layout_width="match_parent" />

    <TextView android:textColor="#000" android:textSize="20dp"
        android:layout_height="wrap_content" android:id="@+id/lab_port"
        android:text="Port" android:layout_width="match_parent" />
    <EditText android:layout_height="wrap_content"
        android:id="@+id/txt_port"
        android:layout_width="match_parent"/>

    <TextView android:textColor="#000" android:textSize="20dp"
        android:layout_height="wrap_content" android:id="@+id/lab_language"
        android:text="Language" android:layout_width="match_parent" />
    <Spinner android:id="@+id/spn_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>